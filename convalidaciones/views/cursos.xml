<odoo>
  <data>
    <record id="convalidaciones.list_cursos" model="ir.ui.view">
      <field name="name">Listado</field>
      <field name="model">convalidaciones.curso</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name" />
          <field name="description" />
        </tree>
      </field>
    </record>

    <record id="convalidaciones.action_window_cursos" model="ir.actions.act_window">
      <field name="name">Ventana de Cursos</field>
      <field name="res_model">convalidaciones.curso</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem
      id="convalidaciones.cursos"
      name="Cursos"
      parent="convalidaciones.menu_root"/>

    <menuitem
      id="convalidaciones.cursos_list"
      name="Listado"
      action="convalidaciones.action_window_cursos"
      parent="convalidaciones.cursos"
      sequence=""/>  
  </data>
</odoo>