<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_tree_estudiante" model="ir.ui.view">
      <field name="name">view.tree.estudiante</field>
      <field name="model">escuela.estudiante</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="escuela_id"/>
        </tree>
      </field>
    </record>


    <record id="view_form_estudiante" model="ir.ui.view">
        <field name="name">view.form.estudiante</field>
        <field name="model">escuela.estudiante</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" string="nombre "/>
                        <field name="escuela_id" string="id escuela"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- actions opening views on models -->

    <record id="action_view_estudiante" model="ir.actions.act_window">
      <field name="name">escuela_estudiante window</field>
      <field name="res_model">escuela.estudiante</field>
      <field name="view_mode">tree,form</field>
    </record>


